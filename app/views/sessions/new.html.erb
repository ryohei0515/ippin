<h1>ログイン画面</h1>
<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span>ログイン状態を記憶する</span>
  <% end %>

  <%= f.submit "ログイン" %>
<% end %>
