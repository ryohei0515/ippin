<% provide(:title, @user.name) %>
<% @shop_food_disp = true %>

<div class="m-8 flex flex-row">
  <div class="w-24">
    <% if @user.picture? %>
      <%= image_tag @user.picture_url(:thumb), class: "rounded-full w-full" %>
    <% else %>
      <img src="http://placehold.jp/300x300.png?text=No image" class="rounded-full w-full">
    <% end %>
  </div>
  <div class="ml-3">
    <div class="">
      ユーザ：<%= @user.name %>
    </div>
  </div>
</div>

<div class="">
  <% if @user.reviews.any? %>
    <div class="my-5 p-3 bg-yellow-100 text-xl">
      <h2><span class="ml-2 font-semibold">レビュー投稿<i class="fas fa-comments text-green-300 mx-1"></i><%= @user.reviews.count %>件</span></h2>
    </div>
    <ol>
      <%= render partial: 'reviews/review', collection: @reviews, as: :review %>
    </ol>
    <%= paginate @reviews %>
  <% end %>
</div>


<!-- 評価javascript -->
<script>
  $('.star-rating').raty({
    starOff: '<%= asset_path("star-off.png") %>',
    starOn: '<%= asset_path("star-on.png") %>',
    starHalf: '<%= asset_path("star-half.png") %>',
    scoreName: 'review[rate]',
    hints: ['とても悪い', '悪い', '普通', '良い', 'とても良い'],
    score: function() {
      return $(this).attr('data-rate');
    },
    readOnly: true
  });
</script>
