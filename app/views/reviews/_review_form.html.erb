<% @form.user_id ||= current_user.id %>
<%= form_with(model: @form, local:true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :user_id %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :rate %>
  <%= f.text_field :rate %>

  <%= f.label :category %>
  <%= f.text_field :category %>

  <%= f.label :food %>
  <%= f.text_field :food %>

  <%= f.label :restaurant %>
  <%= f.text_field :restaurant %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.submit yield(:submit_text) %>
<% end %>
